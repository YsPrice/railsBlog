<div id="<%= dom_id post %>">
  <p>
  <h4> posted by
  <%= link_to post.user.name, user_path(post.user)%>
  </h4>
    <strong>Title:</strong>

    <%= post.title %>
    
    <h6><%=pluralize(post.views, "view")%></h6>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

      <% image_tag(post.image), post.image, skip_pipeline: true %>
      <hr/>
 
      <% post.pictures.each do |picture| %>
      <% image_tag(picture), picture,  skip_pipeline: true %>
      <% end %>
</div>
