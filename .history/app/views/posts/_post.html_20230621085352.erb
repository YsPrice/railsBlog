<div id="<%= dom_id post %>">
  <p>
  <h4> posted by
  <%= link_to post.user.name, user_path(post.user)%>
  </h4>
    <strong>Title:</strong>

    <%= post.title %>
    
    <h6><%=pluralize(post.views, "view")%></h6>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>
  <% !post.image.nil?%>
      <%= link_to image_tag(post.image), post.image %>
      <hr/>
        <% !post.pictures.nil?%>
      <% post.pictures.each do |picture| %>
      <%= link_to image_tag(picture), picture%>
      <% end %>
</div>
