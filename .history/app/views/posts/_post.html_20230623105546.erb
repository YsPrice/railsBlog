<div id="<%= dom_id post %>">
      <h2> 
      <strong>Title:</strong>
      <%= post.title %>
    </h2>




    <h3>posted by
  <%= link_to post.user.name, user_path(post.user)%>
  </h3>
<h4>
  <%=pluralize(post.views, "view")%>
  </h4>

  <text-area>

    <%= post.body %>
  </text-area>

<hr class="solid"/>
</div>
