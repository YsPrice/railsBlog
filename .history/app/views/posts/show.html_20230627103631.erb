





<div class="container">
<hr class="solid"/>
<%= render @post %>

<hr class="solid"/>
<% if current_user == @post.user %>
<div>
  <%= link_to "Edit this post", edit_post_path(@post) %> 


  <%= button_to "Destroy this post", @post, data: {confirm: "are you sure you want to delete this post?"}, :method=> 'delete' %>
</div>
<% end %>
  <%= link_to "Back to posts", posts_path %>
</div>


<div class="container">
<%= render 'comments/form', post: @post, comment: @post.comments.build,
submit_label:"Reply"
%>
<% @comments.each do |comment| %>
<%= render 'comments/comment', post: @post, 
comment: comment
 %>
<% end %>
</div>

