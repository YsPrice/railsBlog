<div class="">
<h1 class="pf-title"><%=@user.name %></h1>
<div class="pfp-page">
<%= image_tag(@user.avatar, class:"rounded-circle" ) if @user.avatar.attached? %>
</div>
</div>
<div class="pf-user-inf">
<h4 class="pf-user-inf">
<%=pluralize(@post_count, "posts")%>




<h4 class="pf-user-inf-1">Profile has <%= pluralize(@user.views, "view") %></h4>
</div>
<hr class="solid"/>
</h4>
<div>
<div class="d-flex justify-content-center">
<h4><%= @user.name%>'s posts </h4>

</div>
<hr class="solid"/>
<div id="posts">


  <% @posts.each do |post| %>
    <%= render post %>
    <p class="show-link">
      <%= link_to "Show this post", post , class:"show-link1"%>
    </p>
      <hr class="solid"/>
  <% end %>

</div>
</div>
