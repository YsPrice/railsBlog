<!-- confirm_delete.html.erb -->
<h2 class="title-delete">Are you sure you want to delete this post?</h2>

<p class="title-delete">
  <%= @post.title %> - <%= @post.body %>
</p>

<%= form_tag delete_post_path(@post), :method=> 'delete' do %>
  <%= submit_tag 'Confirm Delete', class:'delete' %>
<% end %>

<%= link_to 'Cancel', posts_path %>