<div class="posts-container">
<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<%= link_to "Create New Post", new_post_path %>
<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
      <hr class="solid"/>
  <% end %>

</div>
</div>

